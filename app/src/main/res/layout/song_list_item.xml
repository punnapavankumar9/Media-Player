<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SongListItemRecyclerView"
    android:layout_width="match_parent"
    android:layout_marginVertical="2dp"
    android:paddingStart="10dp"
    android:paddingEnd="1dp"
    android:layout_height="wrap_content"
    android:background="@color/teal_200">

    <TextView
        android:id="@+id/txtSongTitleInList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:maxWidth="300dp"
        android:paddingVertical="10dp"
        android:text="@string/phir_se_ud_chale_song"
        android:textSize="20sp"
        tools:ignore="RelativeOverlap" />

    <Button
        android:id="@+id/btnPlayInList"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="40dp"
        android:background="@drawable/ic_btn_bg_play_black" />
<!--        android:layout_toStartOf="@+id/btnSongInfo"-->

    <Button
        android:id="@+id/btnSongInfo"
        android:layout_width="40dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_menu_about" />


</RelativeLayout>